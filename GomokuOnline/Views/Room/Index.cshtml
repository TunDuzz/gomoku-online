@model GomokuOnline.ViewModels.Game.RoomListViewModel
@using GomokuOnline.Models.Entities
@{
    ViewData["Title"] = "Danh sách phòng - Gomoku Online";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-0">
                        <i class="fas fa-door-open me-2 text-primary"></i>
                        Danh sách phòng
                    </h2>
                    <p class="text-muted mb-0">Tìm và tham gia các phòng chơi</p>
                </div>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Tạo phòng mới
                </a>
            </div>

            <!-- Search and Filter -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" name="searchTerm" 
                                       value="@Model.SearchTerm" placeholder="Tìm kiếm phòng...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" name="status">
                                <option value="">Tất cả trạng thái</option>
                                <option value="Waiting">Đang chờ</option>
                                <option value="Playing">Đang chơi</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter me-2"></i>
                                Lọc
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Rooms List -->
            <div class="row">
                @if (Model.Rooms.Any())
                {
                    @foreach (var room in Model.Rooms)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-header bg-transparent border-0 pb-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title mb-1">
                                                <i class="fas fa-chess-board me-2 text-primary"></i>
                                                @room.Name
                                            </h5>
                                            @if (!string.IsNullOrEmpty(room.Description))
                                            {
                                                <p class="text-muted small mb-0">@room.Description</p>
                                            }
                                        </div>
                                        <div class="text-end">
                                            @switch (room.Status)
                                            {
                                                case RoomStatus.Waiting:
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock me-1"></i>Đang chờ
                                                    </span>
                                                    break;
                                                case RoomStatus.Playing:
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-play me-1"></i>Đang chơi
                                                    </span>
                                                    break;
                                                default:
                                                    <span class="badge bg-info">@room.Status</span>
                                                    break;
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center mb-3">
                                        <div class="col-4">
                                            <div class="border-end">
                                                <h6 class="text-primary mb-0">@room.Participants.Count(p => p.Type == ParticipantType.Player)</h6>
                                                <small class="text-muted">Người chơi</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="border-end">
                                                <h6 class="text-info mb-0">@room.BoardSize</h6>
                                                <small class="text-muted">Bàn cờ</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <h6 class="text-success mb-0">@room.WinCondition</h6>
                                            <small class="text-muted">Thắng</small>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>
                                            @room.CreatedByUser?.Username
                                        </small>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            @room.CreatedAt.ToString("dd/MM HH:mm")
                                        </small>
                                    </div>

                                    @if (room.IsPrivate)
                                    {
                                        <div class="alert alert-warning py-2 mb-3">
                                            <i class="fas fa-lock me-2"></i>
                                            <small>Phòng riêng tư</small>
                                        </div>
                                    }

                                    <div class="d-grid gap-2">
                                        @if (room.Status == RoomStatus.Waiting)
                                        {
                                            <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-primary">
                                                <i class="fas fa-sign-in-alt me-2"></i>
                                                Tham gia
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-outline-primary">
                                                <i class="fas fa-eye me-2"></i>
                                                Xem
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="fas fa-door-open fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted mb-3">Chưa có phòng nào</h4>
                            <p class="text-muted mb-4">Hãy tạo phòng đầu tiên để bắt đầu chơi!</p>
                            <a asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>
                                Tạo phòng mới
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds
        setTimeout(function() {
            location.reload();
        }, 30000);

        // Search with debounce
        let searchTimeout;
        document.querySelector('input[name="searchTerm"]').addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                this.form.submit();
            }, 500);
        });
    </script>
}
