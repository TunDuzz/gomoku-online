@model GomokuOnline.ViewModels.Game.GameViewModel
@using GomokuOnline.Models.Entities
@{
    ViewData["Title"] = "Gomoku Online - Trang chủ";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-gamepad me-2"></i>
                        Menu Game
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Room" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>
                            Tạo phòng mới
                        </a>
                        <a asp-controller="Game" asp-action="GameHistory" class="btn btn-warning">
                            <i class="fas fa-history me-2"></i>
                            Lịch sử game
                        </a>
                    </div>
                </div>
            </div>

            <!-- Thống kê nhanh -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Thống kê
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">@Model.ActiveGames.Count</h4>
                            <small class="text-muted">Game đang chơi</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@Model.UserGames.Count</h4>
                            <small class="text-muted">Game của bạn</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Tìm phòng -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-search me-2"></i>
                        Tìm phòng chơi
                    </h5>
                </div>
                <div class="card-body">
                    <form id="searchRoomForm" class="row g-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="searchKeyword" placeholder="Tìm kiếm phòng...">
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tất cả trạng thái</option>
                                <option value="Waiting">Đang chờ</option>
                                <option value="Playing">Đang chơi</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="boardSizeFilter">
                                <option value="">Tất cả kích thước</option>
                                <option value="15">15x15</option>
                                <option value="19">19x19</option>
                                <option value="20">20x20</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search me-1"></i>Tìm
                            </button>
                        </div>
                    </form>
                    
                    <div id="roomSearchResults" class="mt-3">
                        <!-- Kết quả tìm kiếm sẽ hiển thị ở đây -->
                    </div>
                </div>
            </div>

            <!-- Game đang chơi -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-play-circle me-2"></i>
                        Game đang chơi
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ActiveGames.Any())
                    {
                        <div class="row">
                            @foreach (var game in Model.ActiveGames.Take(6))
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100 border-primary">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="fas fa-chess-board me-2"></i>
                                                Phòng @game.GameRoom?.Name
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-users me-1"></i>
                                                    @game.GameRoom?.Participants.Count người chơi
                                                </small>
                                            </p>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @game.StartedAt.ToString("HH:mm")
                                                </small>
                                            </p>
                                            <a asp-action="Room" asp-route-id="@game.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-play me-1"></i>
                                                Vào chơi
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-gamepad fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có game nào đang chơi</p>
                            <a asp-controller="Room" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Tạo phòng mới
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Game gần đây -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>
                        Game gần đây
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UserGames.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Phòng</th>
                                        <th>Trạng thái</th>
                                        <th>Thời gian</th>
                                        <th>Kết quả</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.UserGames.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-chess-board me-2"></i>
                                                @game.GameRoom?.Name
                                            </td>
                                            <td>
                                                @switch (game.Status)
                                                {
                                                    case GameStatus.InProgress:
                                                        <span class="badge bg-warning">Đang chơi</span>
                                                        break;
                                                    case GameStatus.Completed:
                                                        <span class="badge bg-success">Hoàn thành</span>
                                                        break;
                                                    case GameStatus.Draw:
                                                        <span class="badge bg-secondary">Hòa</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-info">@game.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @game.StartedAt.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                @if (game.WinnerUser != null)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-trophy me-1"></i>
                                                        @game.WinnerUser.Username
                                                    </span>
                                                }
                                                else if (game.Status == GameStatus.Draw)
                                                {
                                                    <span class="text-secondary">Hòa</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa kết thúc</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Room" asp-route-id="@game.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có game nào</p>
                            <a asp-controller="Room" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Tạo phòng mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Search room functionality
    document.getElementById('searchRoomForm').addEventListener('submit', function(e) {
        e.preventDefault();
        searchRooms();
    });

    function searchRooms() {
        const keyword = document.getElementById('searchKeyword').value;
        const status = document.getElementById('statusFilter').value;
        const boardSize = document.getElementById('boardSizeFilter').value;
        const resultsContainer = document.getElementById('roomSearchResults');

        // Show loading
        resultsContainer.innerHTML = `
            <div class="text-center py-3">
                <i class="fas fa-spinner fa-spin fa-2x text-primary"></i>
                <p class="text-muted mt-2">Đang tìm kiếm...</p>
            </div>
        `;

        // Build query parameters
        const params = new URLSearchParams();
        if (keyword) params.append('keyword', keyword);
        if (status) params.append('status', status);
        if (boardSize) params.append('boardSize', boardSize);

        // Fetch search results
        fetch(`@Url.Action("SearchRooms", "Game")?${params.toString()}`)
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    displaySearchResults(data.rooms);
                } else {
                    resultsContainer.innerHTML = `
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            ${data.message || 'Không tìm thấy phòng nào'}
                        </div>
                    `;
                }
            })
            .catch(error => {
                console.error('Error searching rooms:', error);
                resultsContainer.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Lỗi khi tìm kiếm phòng
                    </div>
                `;
            });
    }

    function displaySearchResults(rooms) {
        const resultsContainer = document.getElementById('roomSearchResults');
        
        if (!rooms || rooms.length === 0) {
            resultsContainer.innerHTML = `
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Không tìm thấy phòng nào phù hợp
                </div>
            `;
            return;
        }

        let html = '<div class="row">';
        rooms.forEach(room => {
            html += `
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100 border-info">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title mb-0">
                                    <i class="fas fa-chess-board me-2"></i>
                                    ${room.name}
                                </h6>
                                <span class="badge ${room.status === 'Playing' ? 'bg-success' : 'bg-warning'}">
                                    ${room.status === 'Playing' ? 'Đang chơi' : 'Đang chờ'}
                                </span>
                            </div>
                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <small class="text-muted">${room.playerCount} Người chơi</small>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted">${room.boardSize} Bàn cờ</small>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted">${room.winCondition} Thắng</small>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>
                                    ${room.createdBy}
                                </small>
                                <a href="/Game/Room/${room.id}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Vào chơi
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        });
        html += '</div>';
        
        resultsContainer.innerHTML = html;
    }

    // Auto search on filter change
    document.getElementById('statusFilter').addEventListener('change', searchRooms);
    document.getElementById('boardSizeFilter').addEventListener('change', searchRooms);
</script> 