@model GomokuOnline.ViewModels.Game.GameViewModel
@using GomokuOnline.Models.Entities
@{
    ViewData["Title"] = "Gomoku Online - Trang chủ";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-gamepad me-2"></i>
                        Menu Game
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Room" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>
                            Tạo phòng mới
                        </a>
                        <a asp-controller="Room" asp-action="Index" class="btn btn-info">
                            <i class="fas fa-list me-2"></i>
                            Danh sách phòng
                        </a>
                        <a asp-controller="Game" asp-action="GameHistory" class="btn btn-warning">
                            <i class="fas fa-history me-2"></i>
                            Lịch sử game
                        </a>
                    </div>
                </div>
            </div>

            <!-- Thống kê nhanh -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Thống kê
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">@Model.ActiveGames.Count</h4>
                            <small class="text-muted">Game đang chơi</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@Model.UserGames.Count</h4>
                            <small class="text-muted">Game của bạn</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Game đang chơi -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-play-circle me-2"></i>
                        Game đang chơi
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.ActiveGames.Any())
                    {
                        <div class="row">
                            @foreach (var game in Model.ActiveGames.Take(6))
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100 border-primary">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="fas fa-chess-board me-2"></i>
                                                Phòng @game.GameRoom?.Name
                                            </h6>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-users me-1"></i>
                                                    @game.GameRoom?.Participants.Count người chơi
                                                </small>
                                            </p>
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @game.StartedAt.ToString("HH:mm")
                                                </small>
                                            </p>
                                            <a asp-action="Room" asp-route-id="@game.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-play me-1"></i>
                                                Vào chơi
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-gamepad fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có game nào đang chơi</p>
                            <a asp-controller="Room" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Tạo phòng mới
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Game gần đây -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>
                        Game gần đây
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UserGames.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Phòng</th>
                                        <th>Trạng thái</th>
                                        <th>Thời gian</th>
                                        <th>Kết quả</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.UserGames.Take(5))
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-chess-board me-2"></i>
                                                @game.GameRoom?.Name
                                            </td>
                                            <td>
                                                @switch (game.Status)
                                                {
                                                    case GameStatus.InProgress:
                                                        <span class="badge bg-warning">Đang chơi</span>
                                                        break;
                                                    case GameStatus.Completed:
                                                        <span class="badge bg-success">Hoàn thành</span>
                                                        break;
                                                    case GameStatus.Draw:
                                                        <span class="badge bg-secondary">Hòa</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-info">@game.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @game.StartedAt.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                @if (game.WinnerUser != null)
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-trophy me-1"></i>
                                                        @game.WinnerUser.Username
                                                    </span>
                                                }
                                                else if (game.Status == GameStatus.Draw)
                                                {
                                                    <span class="text-secondary">Hòa</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa kết thúc</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Room" asp-route-id="@game.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Chưa có game nào</p>
                            <a asp-controller="Room" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Tạo phòng mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 